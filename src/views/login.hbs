<!doctype html>
<html class="no-js" lang="en">
  {{> head }}
  <body>

    {{> header }}

    <main class="container">

      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <div class="jumbotron">
            <form action="/login" method="post">
              <div class="form-group" >
                <label for="exampleInputEmail1">Username</label>
                <input type="text" class="form-control" name="username" value="test" id="exampleInputEmail1" placeholder="username">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" value="test" name="password" id="exampleInputPassword1" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
          </div>
        </div>
      </div>

    </main>

    {{> footer }}

  </body>
</html>
